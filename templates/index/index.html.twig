{% extends 'base.html.twig' %}

{% block css %}
    {{ encore_entry_link_tags('index') }}
{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('index') }}
{% endblock %}

{% block title %}Eprotest{% endblock %}

{% block body %}
    <main class="wrapper">
        <div class="wrapper__overlay"></div>
        <div class="wrapper__patternBox"><img src="{{ asset('image/wzor.png') }}" alt="" class="wrapper__pattern"></div>
        <div class="wrapper__logo">LOGO</div>
        <header class="wrapper__header">
            <h1 class="wrapper__title">Niech świat usłyszy twój głos!</h1>
            <h2 class="wrapper__subtitle">Dołącz do akcji protestacyjnej</h2>
            <div id="wrapper__form">
                <div class="wrapper__inputBox">
                   <div class="wrapper__row">
                       <input type="text" name="city" placeholder="Wpisz swoją miejscowość" class="wrapper__input" id="searchInput" autocomplete="off">
                       <a class="wrapper__search" id="searchLocation"><img src="{{ asset('image/search.png') }}" alt="Lupa" class="wrapper__searchImage"></a>
                   </div>
                    <div class="wrapper__searchList">
                    </div>
                </div>
                <div class="wrapper__buttons">
                    <a class="wrapper__button" id="detectLocation">Wykryj lokalizację</a>
                    <a href="/register" class="wrapper__button wrapper__button--singup">Dołącz do nas</a>
                </div>
            </form>
        </div>
        <a href="/login" class="wrapper__login"><img src="{{ asset('image/user.svg') }}" alt="" class="wrapper__icon"></a>
    </main>
    <section class="result">
    </section>
{% endblock %}
