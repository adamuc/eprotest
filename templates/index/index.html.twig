{% extends 'base.html.twig' %}

{% block css %}
    {{ encore_entry_link_tags('index') }}
{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('index') }}
{% endblock %}

{% block title %}Eprotest{% endblock %}

{% block body %}
    <main class="wrapper">
        <div class="wrapper__overlay"></div>
        <div class="wrapper__patternBox"><img src="{{ asset('image/wzor.png') }}" alt="" class="wrapper__pattern"></div>
        <div class="wrapper__logo">LOGO</div>
        <header class="wrapper__header">
            <h1 class="wrapper__title">Lorem ipsum dolores</h1>
            <h2 class="wrapper__subtitle">Lorem ipsum dolores</h2>
            <form action="" id="wrapper__form">
                <input type="text" name="city" placeholder="Wpisz swoją miejscowość" class="wrapper__input">
                <div class="wrapper__buttons">
                    <a href="" class="wrapper__button">Szukaj lokalizacji</a>
                    <a href="/register" class="wrapper__button wrapper__button--singup">Dołącz do nas</a>
                </div>
            </form>
        </header>
        <a href="/login" class="wrapper__login"><img src="{{ asset('image/user.svg') }}" alt="" class="wrapper__icon"></a>
    </main>
    <section class="result">
        <div class="result__box">
            <img src="{{ asset('image/event.jpg') }}" alt="" class="result__bg">
        </div>
    </section>
{% endblock %}
