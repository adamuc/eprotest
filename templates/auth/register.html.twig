{% extends 'base.html.twig' %}

{% block css %}
    {{ encore_entry_link_tags('auth') }}
{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('auth') }}
{% endblock %}

{% block title %}Eprotest{% endblock %}

{% block body %}
    <div class="box">
        <div class="box__colOne">
            <form method="post" class="box__form" id="registrationForm" enctype="multipart/form-data">
                <input type="text" class="box__input" placeholder="Nazwa użytkownika" name="username">
                <input type="text" class="box__input" placeholder="E-mail" name="email">
                <input type="password" class="box__input" placeholder="Hasło" name="password">
                <input type="password" class="box__input" placeholder="Powtórz hasło" name="rpassword">
                <input type="submit" class="box__btn" value="Zarejestruj" name="btn">
                <div class="box__error"></div>
            </form>
        </div>
        <div class="box__colTwo">
            <div class="box__header">
                <div class="box__title">
                    Razem zmieniajmy świat!
                </div>
                <div class="box__subtitle">
                    Dołącz do naszej społeczności!
                </div>
            </div>
            <img src="{{ asset('image/wzor.png') }}" alt="Wzór" class="box__img" ></img>
        </div>
    </div>
{% endblock %}
