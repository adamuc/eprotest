{% extends 'base.html.twig' %}

{% block css %}
    {{ encore_entry_link_tags('auth') }}
{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('auth') }}
{% endblock %}

{% block title %}Eprotest{% endblock %}

{% block body %}
    <div class="box">
        <div class="box__colOne">
            <form method="post" class="box__form">
                <input type="text" value="{{ last_username }}" class="box__input" placeholder="Nazwa użytkownika" name="username">
                <input type="password" class="box__input" placeholder="Hasło" name="password">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="submit" class="box__btn" value="Zaloguj" name="btn">
                {% if error %}
                    <div class="box__error">{{ error.messageKey | replace({"Invalid credentials." : "Błędna nazwa użytkownika lub hasło!"}) }}</div>
                {% endif %}
            </form>
        </div>
        <div class="box__colTwo">
            <div class="box__header">
                <div class="box__title">
                    Cieszymy się, że jesteś!
                </div>
                <div class="box__subtitle">
                    Zaloguj się i zmieniaj świat!
                </div>
            </div>
            <img src="{{ asset('image/wzor.png') }}" alt="Wzór" class="box__img" ></img>
        </div>
    </div>
{% endblock %}
